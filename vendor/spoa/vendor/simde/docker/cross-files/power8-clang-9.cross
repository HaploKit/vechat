[binaries]
c = '/usr/bin/clang-9'
cpp = '/usr/bin/clang++-9'
ar = '/usr/bin/llvm-ar-9'
strip = '/usr/bin/llvm-strip-9'
objcopy = '/usr/bin/llvm-objcopy-9'
ld = '/usr/bin/llvm-ld-9'
exe_wrapper = ['qemu-ppc64le-static', '-cpu', 'power8']

[properties]
c_args = ['--target=powerpc64le-linux-gnu', '-mcpu=power8', '-isystem=/usr/powerpc64le-linux-gnu/include', '-Weverything', '-Werror']
cpp_args = ['--target=powerpc64le-linux-gnu', '-mcpu=power8', '-isystem=/usr/powerpc64le-linux-gnu/include', '-Weverything', '-Werror']
c_link_args = ['--target=powerpc64le-linux-gnu']
cpp_link_args = ['--target=powerpc64le-linux-gnu']

[host_machine]
system = 'linux'
cpu_family = 'powerpc64le'
cpu = 'ppc64el'
endian = 'little'
